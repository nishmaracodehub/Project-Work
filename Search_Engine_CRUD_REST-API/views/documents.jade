doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    meta(http-equiv='X-UA-Compatible', content='ie=edge')
    title Hospitals Search Engine
    link(href="https://fonts.googleapis.com/css?family=Orbitron:500|Ubuntu:200",rel="stylesheet")
    link(rel='stylesheet', href='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css', integrity='sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO', crossorigin='anonymous')
    link(rel='stylesheet', href='https://use.fontawesome.com/releases/v5.6.3/css/all.css', integrity='sha384-UHRtZLI+pbxtHCWp1t77Bi1L4ZtiqrqD80Kn4Z8NTSRyMA2Fd33n5dQ8lWUE00s/', crossorigin='anonymous')
    style.
      body,
      html {

      background-color: #777777;
      text-align: center;
      font-family: 'Ubuntu';
      background: rgb(241,240,240); /* W3C, IE 10+/ Edge, Firefox 16+, Chrome 26+, Opera 12+, Safari 7+ */
      }
      .container {
        margin-top: 10%;
      }
      footer {
      margin-top: 25%;
      text-align: center;
      font-size: 20px;
      }
      .rights {
      height: 100px;
      }
      .navbar-brand {
      font-size: 34px;
      font-family: 'Orbitron','Ubuntu', sans-serif;
      font-style: italic;
      }
      .nav-link{
      font-size: 20px;
      }
  body
    nav.navbar.navbar-expand-sm.bg-dark.navbar-dark.fixed-top
      a.navbar-brand.ml-4(href='/') Hospital Search Engine
      // Include this only if you are using jquery
      button.navbar-toggler(type='button', data-toggle='collapse', data-target='#collapsibleNavbar')
        span.navbar-toggler-icon
      // Remove ID collapseibleNavbar below
      #collapsibleNavbar.collapse.navbar-collapse
        ul.navbar-nav.ml-auto.mr-4
          li.nav-item
            a.nav-link(href='https://www.thehackingschool.com/') About
    main
      .container.bg-light
        form#patientForm(action='/documents/#{uid}', method='POST')
          .row.my-5
          h3#description.my-5
            | Please upload patient prescriptions if any
          .row.mx-auto.my-3
            .col-sm-5.text-right
              label#name-label(for='fileUpload')
                sup  
                | Upload Forms:
            .col-sm-4.input-group.form-group
              .input-group-prepend
                span.input-group-text
                  i.fas.fa-upload   
              input#file.form-control(type='file', name='fileUpload', placeholder='File upload', autofocus='')
          input(type="hidden", name="_method", value="put")
          .row
            .col-sm
              a(href='/patientinfo/#{uid}')
                input.form-group.btn.btn-seconday.mb-5.mt-3(type='button', name='skip', value='Skip')
            .col-sm
              input.form-group.btn.btn-primary.mb-5.mt-3(type='submit', name='submit', value='Upload')

    footer
      .bg-dark.text-white.rights.d-flex.flex-column.justify-content-center.fixed-bottom
        // Rights
        p
          span © 
          span.copyright-year 2019
          span  
          span The Hacking School
          span . 
          span All Rights Reserved.
    script(src='https://code.jquery.com/jquery-3.3.1.slim.min.js', integrity='sha384-q8i/X+965DzO0rT7abK41JStQIAqVgRVzpbzo5smXKp4YfRvH+8abtTE1Pi6jizo', crossorigin='anonymous')
    script(src='https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js', integrity='sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49', crossorigin='anonymous')
    script(src='https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js', integrity='sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy', crossorigin='anonymous')
