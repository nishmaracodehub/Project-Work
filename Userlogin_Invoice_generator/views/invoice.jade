                    .input-group.form-group
                      .input-group-prepend
                        span.input-group-text
                          i.fas.fa-phone
                        input.form-control(type='phone', name='numCli', placeholder='Phone Number')
              // End of Card Header
              // Start of Card Body
              .card-body.text-white
                .row.ml-2
                  .col-sm-12
                    h4 Invoice Description
                .row
                  .col.mr-4
